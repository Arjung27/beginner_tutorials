<launch>

	<arg
		name="frequency"
		default="10"
	/>

	<node
		pkg="beginner_tutorials"
		name="publisher"
		type="publisher"
		output="screen"
		args="$(arg frequency)"
	/>

	<node
		pkg="beginner_tutorials"
		name="subscriber"
		type="subscriber"
		output="screen"
	/>
	<node
	    pkg="rosbag"
	    name="rosbag_record_all"
	    type="record"
	    args="--all --output-name=$(find beginner_tutorials)/results/listener.bag"
	    if="$(arg record)"
	    />
</launch>
